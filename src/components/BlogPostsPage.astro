---
import MainLayout from "../layouts/MainLayout.astro";
import BlogPostsList from "./BlogPostsList.astro";

export interface Props {
  posts?: any[];
  url?: any;
}

const { posts = [], url } = Astro.props;
---

<MainLayout title="Blog Posts">
  <section class="brand wow fadeIn" data-wow-delay="0s">
    <div class="inner">
      <header class="major">
        <h1>Blog Posts</h1>
      </header>

      <BlogPostsList posts={posts} />

      <div class="pagination">
        {
          url?.prev ? (
            <a href={url.prev} rel="prefetch">
              ⏮ Previous
            </a>
          ) : null
        }
        {
          url?.next ? (
            <a href={url.next} rel="prefetch">
              Next ⏭
            </a>
          ) : null
        }
      </div>
    </div>
  </section>
</MainLayout>
